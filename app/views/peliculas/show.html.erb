<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @pelicula.titulo %></h1>
          <p class="card-text">Género: <%= @pelicula.genero %></p>
        </div>
      </div>
      <div class="mt-3 d-flex justify-content-center">
        <%= link_to "Editar Película", edit_pelicula_path(@pelicula), class: "btn btn-primary mr-2" %>
        <%= link_to "Volver a la Lista de Películas", peliculas_path, class: "btn btn-secondary mx-2" %>
        <%= button_to "Eliminar Película", @pelicula, method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar esta película?" }, class: "btn btn-danger ml-2" %>
      </div>
    </div>
  </div>
</div>

